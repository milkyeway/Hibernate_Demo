			// new book2
			Books book2 = new Books();
			book2.setBooktitle("Hololive 11");
			book2.setPublicYear("2033-5");
			
			// user
			

			// book set user
		

			// make book set
			

			// user set book
			

			session.getTransaction().commit();
		} catch (Exception e) {
			session.getTransaction().rollback();
			e.printStackTrace();
		} finally {
			HibernateUtils.closeSessionFactory();
		}

	}
}
